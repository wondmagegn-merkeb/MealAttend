
# This file is an example. Create a .env file in the root directory and add your own variables.

# Prisma Database Connection URL
# This is required for the application to connect to your PostgreSQL database.
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/mydb?schema=public"

# Nodemailer SMTP Configuration (for sending emails)
# These are required for the "Forgot Password" and "Welcome Email" features to work.
# You can use a service like SendGrid, Mailgun, or your own SMTP server.
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"
FROM_EMAIL="noreply@example.com"

# Genkit/Gemini AI Configuration (Optional)
# Add your Google AI API key here to enable Genkit features.
# You can get one from Google AI Studio.
GEMINI_API_KEY="your-gemini-api-key"
